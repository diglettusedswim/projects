@model Disk
@{ 
    string title = ViewBag.Action + "Disk";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="DiskName"></label>
        <input asp-for="DiskName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input asp-for="ReleaseDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GenreId"></label>
        <input asp-for="GenreId" class="form-control" />
    </div>

    <input type"hidden" asp-for="DiskId"/>
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Disk" asp-action="List" class="btn btn-primary">Cancel</a>


</form>


