@model Disk
@{ 
    string title = ViewBag.Action + "Disk";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="DiskName"></label>
        <input asp-for="DiskName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input asp-for="ReleaseDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GenreId"></label>
        <select asp-for="GenreId" class="form-control">
            <option value="">select a genre</option>
            @foreach (Genre g in ViewBag.Genres)
            {
                <option value="@g.GenreId">@g.Description</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="StatusId"></label>
        <select asp-for="StatusId" class="form-control">
            <option value="">select a status</option>
            @foreach (Status s in ViewBag.Statuses)
            {
                <option value="@s.StatusId">@s.Description</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DiskTypeId"></label>
        <select asp-for="DiskTypeId" class="form-control">
            <option value="">select a disk type</option>
            @foreach (DiskType dt in ViewBag.DiskTypes)
            {
                <option value="@dt.DiskTypeId">@dt.Description</option>
            }
        </select>
    </div>


    <input type="hidden" asp-for="DiskId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Disk" asp-action="List" class="btn btn-primary">Cancel</a>

</form>